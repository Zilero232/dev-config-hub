{
	"$schema": "./node_modules/nx/schemas/nx-schema.json",
	"defaultBase": "main",
	"workspaceLayout": {
		"libsDir": "tools"
	},
	"namedInputs": {
		"default": ["{projectRoot}/**/*", "sharedGlobals"],
		"production": ["default"],
		"sharedGlobals": []
	},
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx-cloud",
			"options": {
				"cacheDirectory": ".nx/cache",
				"cacheableOperations": ["publish", "build"],
				"accessToken": "MTg4MDA5YmItYWM5MS00OTkzLWEwMGYtNjdlMjE1MDk0ZjZjfHJlYWQtd3JpdGU=",
				"parallel": 2
			}
		}
	},
	"release": {
		"projects": ["tools/*"],
		"projectsRelationship": "fixed",
		"releaseTagPattern": "v{version}",
		"changelog": {
			"automaticFromRef": true,
			"workspaceChangelog": {
				"createRelease": "github",
				"file": "CHANGELOG.md"
			},
			"git": {
				"commit": true,
				"commitMessage": "chore(release): ðŸ“¦ version {version} [skip ci]",
				"tag": true,
				"tagMessage": "Release v{version}"
			}
		},
		"version": {
			"generatorOptions": {
				"packageRoot": "dist/{projectName}",
				"currentVersionResolver": "registry",
				"fallbackCurrentVersionResolver": "disk",
				"skipLockFileUpdate": true,
				"versionSelection": "independent",
				"firstRelease": true
			},
			"git": {
				"commit": true,
				"commitMessage": "chore(release): ðŸ”– version {version}",
				"tag": true,
				"tagMessage": "Release v{version}"
			}
		}
	}
}
