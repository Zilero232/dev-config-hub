		"@types/node": "^20.14.10",
		"beachball": "^2.43.1",
		"conventional-changelog-atom": "^5.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"nx": "^19.4.3",
		"prettier": "^3.3.2",
		"pretty-quick": "^4.0.0",
		"verdaccio": "^5.31.1"
